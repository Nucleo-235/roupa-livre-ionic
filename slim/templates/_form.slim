.form
  .form-group
    label Título
    input type="text" ng-model="entry.title" placeholder="dê um nome diferentão para sua peça"
  .form-group
    label Descrição
    textarea ng-model="entry.description" placeholder="capriche! venda, ou melhor, troque seu peixe."
  .form-group
    label Tamanho
    input type="text" ng-model="entry.size_info" placeholder="p, m, g ou 48?"
  h1.title ng-bind="entry.title"
  ul.extra-info
    li.size-info ng-bind="'tamanho ' + entry.size_info"
    li.gender ng-bind="entry.gender"
    li.age-info ng-bind="entry.age_info"
  ul.tags ng-if="entry.apparel_tags.length > 0"
    li ng-repeat="tag in entry.apparel_tags" ng-bind="'#' + tag.name"
  p.description ng-bind="entry.description"
  .kind-hearted
    img.profile ng-src="{{entry.user.social_image || entry.user.image || 'img/sample/kind-hearted.png' }}"
    .name ng-bind="entry.user.nickname"
    .distance ng-bind="'< ' + entry.user.distance"