ion-slide-box.main show-pager="{{entry.apparel_images.length > 0}}" does-continue="true" height-as-width=""
  ion-slide ng-repeat="image in entry.apparel_images"
    img.main ng-src="{{image | imageSrc }}" 
  / Testing Modal Cropping on WEB BROWSER
