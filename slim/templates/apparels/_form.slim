.item.item-input.item-stacked-label
  span.input-label titulo
  input type="text" ng-model="entry.title" placeholder="dê um nome diferentão para sua peça" /

.item.item-input.item-stacked-label
  span.input-label tamanho
  input type="text" ng-model="entry.size_info" name="size_info" placeholder="p, m, g ou 48?" /

.item.item-input.item-stacked-label
  span.input-label gênero
  .row
    .col.col-50
      ion-radio ng-model="entry.gender" name="gender" ng-value="FEM"  feminino
    .col.col-50
      ion-radio ng-model="entry.gender" name="gender" ng-value="MASC" masculino
  .row
    .col.col-50
      ion-radio ng-model="entry.gender" name="gender" ng-value="NO" sem gênero
    .col.col-50
      ion-radio ng-model="entry.gender" name="gender" ng-value="SKIP" não informar

.item.item-input.item-stacked-label
  span.input-label adulta ou infantil
  .row
    .col.col-33
      ion-radio ng-model="entry.age_info" name="age_info" ng-value="ADU" adulta
    .col.col-33
      ion-radio ng-model="entry.age_info" name="age_info" ng-value="INF" infantil
    .col.col-33
      ion-radio ng-model="entry.age_info" name="age_info" ng-value="ANY" tanto faz

.item.item-input.item-stacked-label
  span.input-label #hashtag
  tags-input type="text" placeholder="Separe as tags com vírgulas." ng-model="entry.apparel_tags" display-property="name" keyProperty="id" /

.item.item-input.item-stacked-label
  span.input-label descrição
  textarea ng-model="entry.description" placeholder="capriche! venda, ou melhor, troque seu peixe." /