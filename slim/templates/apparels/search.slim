ion-view.search
  /! SUBHEADER
  .bar.bar-subheader
    .sheader
      img.icon src="img/iconSearch.png" /
      p.title filtrar
  /! CONTENT
  ion-content.has-header.has-subheader.has-footer
    .list
      .item.item-input.item-stacked-label
        span.input-label #hashtag
        tags-input type="text" placeholder="Separe as tags com vírgulas." ng-model="filters.tags" display-property="name" keyProperty="name" /
      .item.item-input.item-stacked-label
        span.input-label tamanho
        input type="text" ng-model="entry.size_info" name="size_info" placeholder="p, m, g ou 48?" /
      .item.item-input.item-stacked-label
        span.input-label gênero
        .row
          .col.col-50
            ion-radio ng-model="filters.gender" name="gender" value="FEM"  feminino
          .col.col-50
            ion-radio ng-model="filters.gender" name="gender" value="MASC" masculino
        .row
          .col.col-50
            ion-radio ng-model="filters.gender" name="gender" value="NO" sem gênero
          .col.col-50
            ion-radio ng-model="filters.gender" name="gender" ng-value="null" tanto faz
      .item.item-input.item-stacked-label
        span.input-label adulta ou infantil
        .row
          .col.col-33
            ion-radio ng-model="filters.age_info" name="age_info" value="ADU" adulta
          .col.col-33
            ion-radio ng-model="filters.age_info" name="age_info" value="INF" infantil
          .col.col-33
            ion-radio ng-model="filters.age_info" name="age_info" ng-value="null" tanto faz
  /! FOOTER
  ion-footer-bar
    .row.buttonBar
      .col
        button.button.button-cancel ng-click="cancel()" 
          | limpar filtros
      .col
        button.button.button-filter ng-click="filter()" 
          | filtrar